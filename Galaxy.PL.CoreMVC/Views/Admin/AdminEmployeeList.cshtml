@model List<AdminEmployeeViewModel>

@await Html.PartialAsync("AdminMenuPartial")

<hr />
@TempData["Message"]
<form asp-controller="Admin" asp-action="UpdateEmployees" method="post">
    <table class="table table-sm table-hover table-bordered table-dark">
        <thead>
            <tr>
                <th>
                    Employee ID
                </th>
                <th>
                    Mail
                </th>
                <th>
                    Password
                </th>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    User Type
                </th>
                <th>
                    Is Mail Verified
                </th>
                <th>
                    BirthDate
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Is Password Verified
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>
                <td>
                    @Model[i].EmployeeID
                    <input asp-for=@Model[i].EmployeeID hidden>
                </td>
                <td>
                    @Model[i].Mail
                </td>
                <td>
                    <input asp-for=@Model[i].Password hidden>
                </td>
                <td>
                    @Model[i].Name
                </td>
                <td>
                    @Model[i].Surname
                </td>
                <td>
                    @Model[i].UserType
                </td>
                <td>
                    @Model[i].IsMailVerified
                </td>
                <td>
                    @Model[i].BirthDate
                </td>
                <td>
                    @Model[i].Phone
                </td>
                <td>
                    @Model[i].IsPasswordValid
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="DeleteEmployee" asp-route-employeeID="@Model[i].EmployeeID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <hr />
    <button class="btn btn-info btn-sm">Update</button>
</form>