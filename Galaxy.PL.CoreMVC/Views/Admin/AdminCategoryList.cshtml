@model List<AdminCategoryViewModel>

@await Html.PartialAsync("AdminMenuPartial")

<hr />
@TempData["Message"]
<form asp-controller="Admin" asp-action="UpdateCategories" method="post">
    <table class="table table-sm table-hover table-bordered table-dark">
        <thead>
            <tr>
                <th>
                    Category ID
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Is Active?
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {                
                <tr>
                    <td>
                        @Model[i].CategoryID
                        <input asp-for=@Model[i].CategoryID hidden="true">
                    </td>
                    <td>
                        Name: <input asp-for=@Model[i].Name>
                    </td>
                    <td>
                        <a asp-controller="Admin" asp-action="DeleteCategory" asp-route-categoryID="@Model[i].CategoryID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <button class="btn btn-info btn-sm">Update</button>
</form>