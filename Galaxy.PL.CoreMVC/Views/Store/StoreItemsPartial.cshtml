@model StoreItemsViewModel

<table class="table table-sm table-hover table-bordered table-dark">
    <thead>
        <tr>
            <th>
                Picture
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Product Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductViewModel prod in Model.Products)
        {
            <tr>
                <td>
                    @if (prod.ImagePath == string.Empty || prod.ImagePath == null)
                    {
                        <img src="~/Media/Products/underconstruction.png">
                    }
                    else
                    {
                        <img src="@Url.Content(prod.ImagePath)" alt="Image" />
                    }
                </td>
                <td>
                    @prod.Name
                </td>
                <td>
                    @prod.FinalPrice
                </td>
                <td>
                    @prod.Description
                </td>
                <td>
                    <form asp-controller="Cart" asp-action="AddToCart" method="get">
                        <input name="categoryID" type="hidden" value=@prod.CategoryID>
                        <input name="productID" type="hidden" value=@prod.ID>
                        <button class="btn btn-info btn-sm">Add To Cart</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>