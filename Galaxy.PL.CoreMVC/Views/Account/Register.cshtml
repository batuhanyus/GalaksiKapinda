@model AccountRegisterViewModel

@TempData["Message"]
<br />
<form asp-controller="Account" asp-action="Register" method="post">
    EMail: <input asp-for=@Model.EMail> <br />
    Password 1: <input asp-for=@Model.Password1><br />
    Password 2: <input asp-for=@Model.Password2><br />
    Name: <input asp-for=@Model.Name><br />
    SurnameName: <input asp-for=@Model.Surname><br />
    <button class="btn btn-info btn-sm">Register</button>
</form>